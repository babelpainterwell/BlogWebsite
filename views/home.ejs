<%- include("partials/header"); -%> 

<h1>Home</h1>
<p><%= startingContent %></p>
<% posts.forEach(post => { %> 
    <h1><%= post.title %> </h1>
    <p>
    <%= post.body.substring(0,100) + "..."%>
    <a href="/posts/<%= post.title %>">Read More</a>
    <div>    
        <form id="deleteButton" action="/delete" method="post">
            <label for="deleteButton">Delete</label> 
            <input type="checkbox" name="checkbox" value=<%= post._id %>  onChange="this.form.submit()">
        </form>
    </div>
    </p>
<%  }) %> 



<%- include("partials/footer"); -%> 